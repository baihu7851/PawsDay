@using PawsDay.Services.Product
@using PawsDay.ViewModels.SearchProduct
@using System.Text.Json
@model SearchProductViewModel
@inject ProductServices service;
@{
    ViewData["Title"] = "服務搜尋";
    SearchProductViewModel search = (SearchProductViewModel)Model;
    var filterArea = service.FilterArea();
}
<form class="col-lg-3 col-12 filter-group">
    <ul class="filter accordion" id="accordionPanelsStayOpenExample">
        <li class="filter-item w-100 filter-area">
            <h2 class="accordion-header" id="panelsStayOpen-headingOne">
                <button class="accordion-button" type="button" data-bs-toggle="collapse"
                        data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true"
                        aria-controls="panelsStayOpen-collapseOne">
                    縣市／地區
                </button>
            </h2>
            <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show"
                 aria-labelledby="panelsStayOpen-headingOne">
                <div class="accordion-body">
                    <select class="pawsday-input" id="county" name="county">
                        <option selected value="countyAll">-- 縣／市 --</option>
                        @foreach (var county in filterArea.County)
                        {
                            <option>@county</option>
                        }
                    </select>
                    <select class="pawsday-input" id="district" name="district">
                        <option selected value="districtAll">-- 區 --</option>
                    </select>
                </div>
            </div>
        </li>
        <li class="filter-item">
            <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false"
                        aria-controls="panelsStayOpen-collapseTwo">
                    星期
                </button>
            </h2>
            <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse"
                 aria-labelledby="panelsStayOpen-headingTwo">
                <div class="accordion-body">
                    <label>
                        <input type="radio" name="day" value="dayAll" checked>
                        <p>全部</p>
                    </label>
                    <label>
                        <input type="radio" name="day" value="Mondy">
                        <p>星期一</p>
                    </label>
                    <label>
                        <input type="radio" name="day" value="Tuesday">
                        <p>星期二</p>
                    </label>
                    <label>
                        <input type="radio" name="day" value="Wednesday">
                        <p>星期三</p>
                    </label>
                    <label>
                        <input type="radio" name="day" value="Thursday">
                        <p>星期四</p>
                    </label>
                    <label>
                        <input type="radio" name="day" value="Friday">
                        <p>星期五</p>
                    </label>
                    <label>
                        <input type="radio" name="day" value="Saturday">
                        <p>星期六</p>
                    </label>
                    <label>
                        <input type="radio" name="day" value="Sunday">
                        <p>星期天</p>
                    </label>
                </div>
            </div>
        </li>
        <li class="filter-item">
            <h2 class="accordion-header" id="panelsStayOpen-headingThree">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#panelsStayOpen-collapseThree" aria-expanded="false"
                        aria-controls="panelsStayOpen-collapseThree">
                    時段
                </button>
            </h2>
            <div id="panelsStayOpen-collapseThree" class="accordion-collapse collapse"
                 aria-labelledby="panelsStayOpen-headingTwo">
                <div class="accordion-body">
                    <label>
                        <input type="radio" name="time" value="timeAll" checked>
                        <p>全部</p>
                    </label>
                    <label>
                        <input type="radio" name="time" value="Aftermidnight">
                        <p>00:00~05:59</p>
                    </label>
                    <label>
                        <input type="radio" name="time" value="Morning">
                        <p>06:00~11:59</p>
                    </label>
                    <label>
                        <input type="radio" name="time" value="Afternoon">
                        <p>12:00~17:59</p>
                    </label>
                    <label>
                        <input type="radio" name="time" value="Night">
                        <p>18:00~23:59</p>
                    </label>
                </div>
            </div>
        </li>
        <li class="filter-item">
            <h2 class="accordion-header" id="panelsStayOpen-headingFour">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#panelsStayOpen-collapseFour" aria-expanded="false"
                        aria-controls="panelsStayOpen-collapseFour">
                    服務類別
                </button>
            </h2>
            <div id="panelsStayOpen-collapseFour" class="accordion-collapse collapse"
                 aria-labelledby="panelsStayOpen-headingFour">
                <div class="accordion-body">
                    <label>
                        <input type="radio" name="service" value="serviceAll" checked>
                        <p>全部</p>
                    </label>
                    <label>
                        <input type="radio" name="service" value="到府照顧">
                        <p>到府照顧</p>
                    </label>
                    <label>
                        <input type="radio" name="service" value="到府洗澡">
                        <p>到府洗澡</p>
                    </label>
                    <label>
                        <input type="radio" name="service" value="到府散步">
                        <p>陪伴散步</p>
                    </label>
                </div>
            </div>
        </li>
        <li class="filter-item">
            <h2 class="accordion-header" id="panelsStayOpen-headingFive">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#panelsStayOpen-collapseFive" aria-expanded="false"
                        aria-controls="panelsStayOpen-collapseFive">
                    寵物類別
                </button>
            </h2>
            <div id="panelsStayOpen-collapseFive" class="accordion-collapse collapse"
                 aria-labelledby="panelsStayOpen-headingFive">
                <div class="accordion-body">
                    <label>
                        <input type="radio" name="pet" value="petAll" checked>
                        <p>全部</p>
                    </label>
                    <label>
                        <input type="radio" name="pet" value="Dog">
                        <p>狗狗</p>
                    </label>
                    <label>
                        <input type="radio" name="pet" value="Cat">
                        <p>貓貓</p>
                    </label>
                </div>
            </div>
        </li>
    </ul>
    <button type="submit" class="pawsday-btn filter-submit" asp-route="Search" asp-route-searchinput="@search.SearchInput">確定</button>
</form>
