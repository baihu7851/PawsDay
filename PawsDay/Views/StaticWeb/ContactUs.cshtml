@using PawsDay.ViewModels.StaticWeb
@{
    Layout = "_LayoutSearchNone";
}
@model ContactUsViewModel
@section topCSS{
    <link rel="stylesheet" href="~/css/staticWeb/staticContact.css">

        @*Leaflet CSS*@
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css"
      integrity="sha512-hoalWLoI8r4UszCkZ5kL8vayOGVae1oxXe/2A4AO6J9+580uKHDO3JdHb7NzwwzK5xr/Fs0W40kiNHxM9vyTtQ=="
      crossorigin="" />
        @*Leaflet's JS*@
    <script src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js"
        integrity="sha512-BB3hKbKWOc9Ez/TAwyWxNXeoV9c1v6FIeYiBieIWkpLjauysF18NzgR1MBNBXf8/KABdlkX68nAhlwcDFLGPCQ=="
        crossorigin=""> </script>
}

    @{
    ViewData["Title"] = "聯絡我們";
}

<section class="contact-title-container">
   
    <h2 class="title-h2">聯絡我們</h2>
    
</section>

<div class="container contact-us">
    <section class="input-container">
        <!-- <div class="row"> -->
        <div class="input-content">
            我們收到您的意見後將於工作日由專人以郵件回覆您，
            如有立即回覆需求，請撥打客服專線。
            查詢相關服務資訊，請參考 <a asp-controller="StaticWeb" asp-action="Support" class="common-problem-link">常見問題</a>，謝謝！
        </div>
        <!-- </div> -->

        <div class="row">

            <form method="post" class="inputs-group col-12 col-md-6 col-lg-6" id="contactVue">
                <div class="input-item">
                    <label class="pawsday-input-label" for="user-name">姓名</label>
                    <span class="text-danger">*</span><span asp-validation-for="@Model.Name" class="input-span text-danger"></span>
                    <div class="text-danger contactCheckError">{{inputCheck.nameInputErrorMsg}}</div>
                    <input class="pawsday-input" name="Name" type="text" id="user-name" placeholder="請輸入姓名" v-model="inputData.nameInput" :class="{'is-invalid':inputCheck.nameInputError}">
                    
                </div>

                <div class="input-item">
                    <label class="pawsday-input-label" for="user-mail">E-Mail</label>
                    <span class="text-danger">*</span><span asp-validation-for="@Model.Mail" class="input-span text-danger"></span>
                    <div class="text-danger contactCheckError">{{inputCheck.mailInputErrorMsg}}</div>
                    <input name="Mail" class="pawsday-input" type="email" id="user-mail" placeholder="請輸入e-mail" v-model="inputData.mailInput" :class="{'is-invalid':inputCheck.mailInputError}">
                    
                </div>

                <div class="input-item">
                    <label class="pawsday-input-label" for="user-phone">手機號碼</label>
                    <span class="text-danger">*</span><span asp-validation-for="@Model.Phone" class="input-span text-danger"></span>
                    <div class="text-danger contactCheckError">{{inputCheck.phoneInputErrorMsg}}</div>
                    <input name="Phone" class="pawsday-input" type="tel" id="user-phone" placeholder="請輸入電話" v-model="inputData.phoneInput" :class="{'is-invalid':inputCheck.phoneInputError}">
                    
                </div>

                <div class="input-item">
                    <label class="pawsday-input-label" for="user-title">主旨</label>
                    <span class="text-danger">*</span><span asp-validation-for="@Model.Title" class="input-span text-danger"></span>
                    <div class="text-danger contactCheckError">{{inputCheck.titleInputErrorMsg}}</div>
                    <input name="Title" class="pawsday-input" type="text" id="user-title" placeholder="請輸入主旨" v-model="inputData.titleInput" :class="{'is-invalid':inputCheck.titleInputError}">
                    
                </div>

                @*<div class="input-item">
                <label for="user-question" class="pawsday-input-label">
                選擇問題分類
                </label>
                <span class="text-danger">*</span>
                <select class="form-select pawsday-input" aria-label="Default select example" id="user-question">
                <option class="question" value="問題分類">請選擇分類</option>
                <option class="question" value="問題分類">到府照顧</option>
                <option class="question" value="問題分類">到府洗澡</option>
                <option class="question" value="問題分類">陪伴散步</option>
                </select>
                </div>*@

                <div class="input-item">
                    <label for="user-suggest" class="pawsday-input-label">您的意見</label>
                    <span class="text-danger">*</span><span asp-validation-for="@Model.ContactContent" class="input-span text-danger"></span>
                    <div class="text-danger contactCheckError">{{inputCheck.contentInputErrorMsg}}</div>
                    <textarea name="ContactContent" class="pawsday-input" id="user-suggest" rows="3" v-model="inputData.contentInput" :class="{'is-invalid': inputCheck.contentInputError}"></textarea>
                    
                </div>

                <div class="input-confirm">
                    <button class="pawsday-btn" type="submit" :disabled="!isVerify" asp-controller="StaticWeb" asp-action="ContactUs" id="input-confirm">提交</button>
                </div>
            </form>


            <div class="contact-text col-12 col-md-6 col-lg-6">
                <h3 class="contact-h3"><img src="~/images/logo.png" alt="LOGO圖"></h3>
                <ul>
                    <li>公司名稱：日日毛掌股份有限公司</li>
                    <li>客服電話：02-6605-7606</li>
                    <li>Email：pawsday888@gmail.com</li>
                    <li>營業時間：週一至週五 9:00~18:00（例假日暫不提供電話服務）</li>
                    <li>登記地址：106台北市大安區忠孝東路三段96號11號樓之1</li>
                </ul>

                <div class="contact-map">
                    @*<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3614.778375007856!2d121.53190543488768!3d25.04159420000001!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3442a9b46004be17%3A0x3918a3fc6295cbef!2sBuild%20School!5e0!3m2!1szh-TW!2stw!4v1662623720520!5m2!1szh-TW!2stw" width="400" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade">
                    </iframe>*@
                    <div id="map"></div>
                </div>

            </div>



        </div>
    </section>
</div>

@section endJS{
    <script src="~/js/Contact.js"></script>
}


