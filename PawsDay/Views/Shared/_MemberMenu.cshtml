<div class="member-body">
	@if (Context.User.Identity.IsAuthenticated)
	{
		<ul class="function-list">
			<li class="account-setting">
				<a asp-controller="MemberCenter" asp-action="PersonInformation">
					<i class="fa-solid fa-gear person-i"></i>
					<p>帳號設定</p>
				</a>
			</li>
			<li class="chat-room">
				<a asp-route="Member/MessageList-Official">
					<i class="fa-solid fa-comment-dots"></i>
					<p>聊天室</p>
				</a>
			</li>
			<li class="calendar">
				<a asp-controller="MemberCenter" asp-action="Calendar">
					<i class="fa-solid fa-calendar-minus"></i>
					<p>行事曆</p>
				</a>
			</li>
			<li class="collect">
				<a asp-controller="MemberCenter" asp-action="Collect">
					<i class="fa-solid fa-heart"></i>
					<p>我的收藏</p>
				</a>
			</li>
			<li class="order-list">
				<a asp-controller="MemberCenter" asp-action="Order">
					<i class="fa-solid fa-arrow-down-short-wide"></i>
					<p>訂單列表</p>
				</a>
			</li>
			<li class="history-evaluation">
				<a asp-controller="MemberCenter" asp-action="HistoryEvaluation">
					<i class="fa-solid fa-message"></i>
					<p>歷史評論</p>
				</a>
			</li>
		</ul>
		<div class="member-toggle">
			@if (memberMenu.IsSitter)
			{
				@if (memberMenu.SitterStatus == (int)SitterStatus.Approved)
				{
					<a asp-controller="SitterCenter" asp-action="Basic">
						<p>前往保姆中心</p>
					</a>
				}
				else if (memberMenu.SitterStatus  == (int)SitterStatus.AwaitToCheck)
				{
					<a disabled><p>保姆審核中</p></a>
				}
				else if (memberMenu.SitterStatus == (int)SitterStatus.Suspend)
				{
					<a disabled><p>保姆已停權</p></a>
				}
				else
				{
					<a asp-controller="BecomePetsitter" asp-action="PetsitterIntro">
						<p>重新申請保姆</p>
					</a>
				}
			}
			else
			{
				<a asp-controller="BecomePetsitter" asp-action="PetsitterIntro"><p>成為保姆</p></a>
			}
		</div>
		<div class="member-signout">
			<a asp-controller="Account" asp-action="Logout">
				<p>登出</p>
			</a>
		</div>
	}
	else
	{
		<div class="member-login">
			<a href="" type="button" class="login-btn" data-bs-toggle="modal" data-bs-target="#login-register">
				<p>登入／註冊</p>
			</a>
		</div>
	}
</div>
