@{
    ViewData["Title"] = "保姆管理";
}

<div id="membervue" v-cloak>
    <div class="container-fluid">
        <h1 class="h3 mb-2 text-gray-800 font-weight-bold">會員列表</h1>
        <!-- 搜尋nav -->
        <div class=" d-flex form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
            <div class="btn-toolbar mb-3" role="toolbar" aria-label="Toolbar with button groups">
                <div class="btn-group me-2" role="group" aria-label="First group">
                    <button type="button"
                            class="btn btn-outline-secondary"
                            @@click="getAllNormalMember">
                        會員列表
                    </button>
                    <button type="button"
                            class="btn btn-outline-secondary"
                            @@click="getAllSuspendMember">
                        停權列表
                    </button>
                </div>
            </div>
            <div class="input-group mb-3 ml-5">
                <input v-model="searchinput"
                       type="text"
                       class="form-control bg-white border-1 border-secondary small w-25"
                       id="searchinput"
                       placeholder="Search for..."
                       aria-label="Search" aria-describedby="basic-addon2">
                <b-form-select @@change="search" v-model="selected" :options="options" name="" id="" class="border border-secondary rounded w-50"
                               :disabled="!isVerify"
                               v-on:change="clean">
                </b-form-select>
                <div class="input-group-append">
                    <button class="btn btn-secondary" type="button">
                        <i class="fas fa-search fa-sm"></i>
                    </button>
                </div>
            </div>
        </div>
        <!-- 列表 -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold"> 搜尋結果:{{totalPage}}筆</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">

                    <b-table class="table table-bordered"
                             striped
                             hover
                             :items="memberlist"
                             :fields="fields"
                             :filter="filter"
                             @@row-clicked="showData">
                        <template #cell(actions)="row">
                            <button class="btn btn-success"
                                    @@click.stop="returnstatus(row)"
                                    :disabled="isnormalmember">
                                復權
                            </button>
                            <button class="btn btn-danger"
                                    @@click.stop="stopstatus(row)"
                                    :disabled="!isnormalmember">
                                停權
                            </button>
                        </template>
                    </b-table>
                    <b-pagination v-model="currentPage"
                                  :total-rows="totalPage"
                                  :per-page="perPage"
                                  size="md"
                                  class="justify-content-center mt-2 sec"
                                  @@click.native="changepage">
                    </b-pagination>
                </div>
            </div>
        </div>
    </div>

    <!-- modal -->
    <div class="modal fade pt-md-5 " tabindex="-1" id="info-modal">
        <div class="modal-dialog mt-md-5 modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-dark">
                    <h5 class="modal-title text-center text-white">會員資訊</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" class="text-white">&times;</span>
                    </button>
                </div>
                <div class="modal-body text-center p-3 ">
                    <div class="row d-flex justify-content-center  text-center">
                        <div class="col-4  overflow-hidden  img-profile img-fluid border-secondary  flex-md-column border-right border-secondary">
                            <img :src="memberinfo.image" class="d-block mx-auto w-100 img-profile">
                        </div>

                        <div class="col-4">
                            <div class="title font-weight-bold h6  text-white bg-dark w-50">會員ID</div>
                            <div class="context h6">{{memberinfo.memberId}}</div>
                            <div class="title font-weight-bold h6 mt-3 text-white bg-dark w-50">會員名字</div>
                            <div class="context h6">{{memberinfo.name}}</div>
                            <div class="title font-weight-bold h6 mt-3 text-white bg-dark w-50">電話</div>
                            <div class="context h6">{{memberinfo.phone}}</div>
                            <div class="title font-weight-bold h6 mt-3 text-white bg-dark w-50">Email</div>
                            <div class="context h6">{{memberinfo.email}}</div>
                            <div class="title font-weight-bold h6 mt-3 text-white bg-dark w-50">會員狀態</div>
                            <div class="context h6">{{memberinfo.status}}</div>
                        </div>

                        <div class="col-4">
                            <div class="title font-weight-bold h6 text-white bg-dark w-50">性別</div>
                            <div class="context h6">{{memberinfo.sex}}</div>
                            <div class="title font-weight-bold h6 mt-3 text-white bg-dark w-50">生日</div>
                            <div class="context h6">{{memberinfo.birth | datetime}}</div>
                            <div class="title font-weight-bold h6 mt-3 text-white bg-dark w-50">加入時間</div>
                            <div class="context h6">{{memberinfo.createTime | datetime}}</div>
                            <div class="title font-weight-bold h6 mt-3 text-white bg-dark w-50">申請資格</div>
                            <div class="context h6">{{memberinfo.role}}</div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
@section endJS
    {
    <script src="~/js/Member.js"></script>

}
